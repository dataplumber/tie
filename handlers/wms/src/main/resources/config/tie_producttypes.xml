<?xml version="1.0" encoding="UTF-8"?>

<handler>
   <productTypes>
      <sigevent>http://localhost:8100/sigevent/</sigevent>
      <detectionType>CMR</detectionType>
      <cacheRetention>30</cacheRetention>
      <productType>
         <name>OMI_SO2_PBL_STD_SRC</name>
         <collection>C1266136112-GES_DISC</collection>
         <interval>60</interval>
         <cmrURL>http://cmr.earthdata.nasa.gov/search/granules.json?concept_id&#91;&#93;=${collectionId}&amp;page_size=${pageSize}</cmrURL>
         <cmrPageSize>10</cmrPageSize>
         <wmsURL>http://giovanni.gsfc.nasa.gov/giovanni/daac-bin/wms_ag4?version=1.1.1&amp;service=WMS&amp;request=GetMap&amp;SRS=EPSG:4326&amp;WIDTH=${width}&amp;HEIGHT=${height}&amp;TRANSPARENT=TRUE&amp;FORMAT=image/png&amp;bbox=${bbox}&amp;LAYERS=${layer}&amp;time=${time}</wmsURL>
         <layer>Time-Averaged.OMSO2e_003_ColumnAmountSO2_PBL</layer>
         <dateTimeFormat>yyyy-MM-dd'T'hh:mm:ss'Z'</dateTimeFormat>
         <colormapParam>
            <type>sld</type>
            <value>https://uat.gibs.earthdata.nasa.gov/slds/OMI_SO2_Planetary_Boundary_Layer.xml</value>
         </colormapParam>
         <bbox>
            <left_x>-180</left_x>
            <lower_y>-90</lower_y>
            <right_x>180</right_x>
            <upper_y>90</upper_y>
         </bbox>
         <width>1024</width>
         <height>512</height>
         <format>PNG</format>
      </productType>
   </productTypes>
</handler>
